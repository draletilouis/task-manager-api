# Database
# Development: Use local PostgreSQL
# Production (Railway): This will be auto-injected as ${{Postgres.DATABASE_URL}}
DATABASE_URL="postgresql://user:password@localhost:5432/kazi_db"

# JWT Secrets
# IMPORTANT: Generate strong secrets for production using: openssl rand -base64 32
# Must be at least 32 characters long
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"

# Server
# Development: Use 5000 or 3001
# Production (Railway): This will be auto-injected as ${{PORT}}
PORT=5000
NODE_ENV=development

# Frontend URL (for CORS and email links)
# Development: Local Vite dev server
# Production: Your deployed frontend URL (e.g., https://your-app.up.railway.app)
# Multiple origins: separate with commas (https://app1.com,https://app2.com)
FRONTEND_URL="http://localhost:5173"

# Email Configuration (Resend)
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY="re_your_api_key_here"
EMAIL_FROM="Kazi <onboarding@resend.dev>"

# App URL (used in email links)
# Should match your frontend URL
APP_URL="http://localhost:5173"
